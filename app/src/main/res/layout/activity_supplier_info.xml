<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.Supplier_infoActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"
        android:gravity="center"
        android:text="Supplier Info"
        android:textColor="@color/black"
        android:textSize="28dp" />

    <EditText
        android:id="@+id/supnameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_text_shape"
        android:hint="Supplier/Company Name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/srnameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"
        android:hint="Sr Name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/supcontactid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"
        android:hint="Mobile No"
        android:textSize="20sp" />

    <Button

        android:id="@+id/suplierbtnid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/submit_button_shape"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="20dp" />


</LinearLayout>